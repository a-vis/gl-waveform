{
  "name": "gl-waveform",
  "version": "3.0.0",
  "description": "Performant waveform renderer with WebGL",
  "scripts": {
    "test": "budo test.js",
    "lint": "eslint */*.js *.js --ignore-pattern test*",
    "build": "browserify test.js -g bubleify | indexhtmlify | metadataify > demo/index.html"
  },
  "browserify": {
    "transform": [
      "glslify",
      [
        "babelify",
        {
          "plugins": [
            "import-to-require",
            "transform-react-jsx"
          ]
        }
      ]
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-vis/gl-waveform.git"
  },
  "keywords": [
    "waveform",
    "time-data",
    "audio",
    "spectrum",
    "spectrogram",
    "data-vis"
  ],
  "author": "Dmitry Yv <dfcreative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-vis/gl-waveform/issues"
  },
  "homepage": "https://github.com/a-vis/gl-waveform#readme",
  "dependencies": {
    "gl-util": "^3.0.8",
    "glslify": "^6.2.1",
    "is-plain-obj": "^1.1.0",
    "jsx-transform": "^2.4.0",
    "negative-index": "^1.0.2",
    "object-assign": "^4.1.1",
    "parse-rect": "^1.2.0",
    "pick-by-alias": "^1.2.0",
    "regl": "^1.3.7",
    "typedarray-pool": "^1.1.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-glslify": "^2.0.0",
    "babel-plugin-import-to-require": "^1.0.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babelify": "^8.0.0"
  }
}
