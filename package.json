{
  "name": "gl-waveform",
  "version": "4.1.0",
  "description": "Performant waveform renderer with WebGL",
  "main": "dist/index.js",
  "scripts": {
    "test": "budo test.js",
    "lint": "eslint */*.js *.js --ignore-pattern test*",
    "build": "browserify index.js -s gl-waveform -x regl -x pick-by-alias -x object-assign -x negative-index -x es6-weak-map -x parse-rect -x gl-util -x is-plain-obj -x typedarray-pool -x color-normalize -x is-negative-zero -x to-float32 -x parse-unit -x to-px -t glslify -g bubleify > dist/index.js",
    "demo": "browserify example.js -g bubleify | indexhtmlify | metadataify > demo/index.html"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "plugins": [
            "import-to-require",
            "transform-react-jsx"
          ]
        }
      ],
      "glslify"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-vis/gl-waveform.git"
  },
  "keywords": [
    "waveform",
    "time-data",
    "audio",
    "spectrum",
    "spectrogram",
    "data-vis"
  ],
  "author": "Dmitry Yv <dfcreative@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/a-vis/gl-waveform/issues"
  },
  "homepage": "https://github.com/a-vis/gl-waveform#readme",
  "dependencies": {
    "color-normalize": "^1.3.0",
    "gl-util": "^3.0.9",
    "is-plain-obj": "^1.1.0",
    "negative-index": "^1.0.2",
    "object-assign": "^4.1.1",
    "parse-rect": "^1.2.0",
    "parse-unit": "^1.0.1",
    "pick-by-alias": "^1.2.0",
    "regl": "^1.3.7",
    "to-float32": "^1.0.0",
    "to-px": "^1.0.1",
    "typedarray-pool": "^1.1.0",
    "weak-map": "^1.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-import-to-require": "^1.0.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babelify": "^8.0.0",
    "bubleify": "^1.2.0",
    "controlkit": "^0.1.9",
    "fps-indicator": "^1.2.1",
    "glslify": "^6.2.1",
    "indexhtmlify": "^1.3.1",
    "metadataify": "^2.0.0",
    "mobilify": "^1.0.1",
    "pan-zoom": "^3.2.1",
    "performance-now": "^2.1.0",
    "periodic-function": "^1.1.4",
    "prettysize": "^1.1.0"
  }
}
